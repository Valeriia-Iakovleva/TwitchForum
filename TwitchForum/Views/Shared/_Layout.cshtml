<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img width="40" height="32" src="~/Content/img/SiteLogo.png" />
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li>@Html.ActionLink("Home", "Index", "Main", new { id = 1 }, new { @class = "nav-link px-2 text-secondary" })</li>
                    <li>@Html.ActionLink("Forum", "Index", "Forum", new { id = 1 }, new { @class = "nav-link px-2 text-white" })</li>
                    <li>@Html.ActionLink("Games", "Index", "Forum", new { @class = "nav-link px-2 text-white" })</li>
                </ul>

                @Html.Partial("_LoginPartial")

                @*<div class="text-end">
                        <button type="button" class="btn btn-outline-light me-2">Login</button>
                        <button type="button" class="@*btn btn-warning* >Sign-up</button>
                    </div>*@
            </div>
        </div>
    </header>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>